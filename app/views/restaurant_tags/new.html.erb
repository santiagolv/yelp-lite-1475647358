<!-- Validation failure messages -->
<% if @restaurant_tag.errors.any? %>
  <% @restaurant_tag.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Add Restaurant Tag</h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/create_restaurant_tag" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for restaurant_id -->
      <div class="form-group">
        <label for="restaurant_id" class="control-label">
          Restaurant
        </label>

        <%= select_tag(:restaurant_id, options_from_collection_for_select(RestaurantsProfile.all, :id, :name, @restaurant_tag.restaurant_id), :class => "form-control") %>
      </div>

      <!-- Label and input for user_id -->
      <div class="form-group">
        <label for="user_id" class="control-label">
          User
        </label>

        <%= select_tag(:user_id, options_from_collection_for_select(User.all, :id, :name, @restaurant_tag.user_id), :class => "form-control") %>
      </div>

      <!-- Label and input for tag_id -->
      <div class="form-group">
        <label for="tag_id" class="control-label">
          Tag
        </label>

        <%= select_tag(:tag_id, options_from_collection_for_select(TagCatalogue.all, :id, :tag_content, @restaurant_tag.tag_id), :class => "form-control") %>
      </div>

      <button class="btn btn-success">
        Create Restaurant Tag
      </button>
      or
      <a href="/restaurant_tags">Cancel</a>
    </form>
  </div>
</div>
