<div class="page-header">
  <h1>
    Review replies
    <a href="/review_replies/new" class="btn btn-lg btn-success">New Review reply</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Reply content</th>
        <th>Review</th>
        <th>Restaurant ownership</th>
        <th>Actions</th>
      </tr>

      <% @review_replies.each do |review_reply| %>
      <tr>
        <td><%= review_reply.reply_content %></td>
        <td><%= review_reply.review.content %></td>
        <td><%= review_reply.restaurant_ownership.user_id %></td>
        <td>
          <a href="/review_replies/<%= review_reply.id %>" class="btn btn-primary">Show</a>
          <a href="/review_replies/<%= review_reply.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_review_reply/<%= review_reply.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
