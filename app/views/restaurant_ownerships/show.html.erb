<div class="page-header">
  <h3>Restaurant Ownership #<%= @restaurant_ownership.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <dl class="dl-horizontal">
      <dt>User</dt>
      <dd><%= @restaurant_ownership.user_id %></dd>

      <dt>Restaurant</dt>
      <dd><%= @restaurant_ownership.restaurant_id %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/restaurant_ownerships" class="btn btn-primary">
        Back
      </a>
      <a href="/restaurant_ownerships/<%= @restaurant_ownership.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_restaurant_ownership/<%= @restaurant_ownership.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>

<!-- A Restaurant ownership has many review_replies -->

<div class="row">
  <div class="col-md-12">
    <ul class="list-group">
      <li class="list-group-item list-group-item-info">
        Review_replies
      </li>

      <% @restaurant_ownership.review_replies.each do |review_reply| %>
        <li class="list-group-item">
          <a href="/review_replies/<%= review_reply.id %>">
            <%= review_reply.reply_content %>
          </a>
        </li>
      <% end %>
    </ul>
  </div>
</div>
