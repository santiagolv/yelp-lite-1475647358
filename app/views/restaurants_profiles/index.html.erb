<div class="page-header">
  <h1>
    Restaurants profiles
    <a href="/restaurants_profiles/new" class="btn btn-lg btn-success">New Restaurants profile</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Name</th>
        <th>Description</th>
        <th>Website</th>
        <th>Address</th>
        <th>Cover photo</th>
        <th>Neighborhood</th>
        <th>Actions</th>
      </tr>

      <% @restaurants_profiles.each do |restaurants_profile| %>
      <tr>
        <td><%= restaurants_profile.name %></td>
        <td><%= restaurants_profile.description %></td>
        <td><%= restaurants_profile.website %></td>
        <td><%= restaurants_profile.address %></td>
        <td><%= restaurants_profile.cover_photo %></td>
        <td><%= restaurants_profile.neighborhood_id %></td>
        <td>
          <a href="/restaurants_profiles/<%= restaurants_profile.id %>" class="btn btn-primary">Show</a>
          <a href="/restaurants_profiles/<%= restaurants_profile.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_restaurants_profile/<%= restaurants_profile.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
