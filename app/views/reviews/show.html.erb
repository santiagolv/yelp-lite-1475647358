<div class="page-header">
  <h3>Review #<%= @review.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <dl class="dl-horizontal">
      <dt>Content</dt>
      <dd><%= @review.content %></dd>

      <dt>User</dt>
      <dd><%= @review.user_id %></dd>

      <dt>Restaurant</dt>
      <dd><%= @review.restaurant_id %></dd>

      <dt>Stars</dt>
      <dd><%= @review.stars %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/reviews" class="btn btn-primary">
        Back
      </a>
      <a href="/reviews/<%= @review.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_review/<%= @review.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>

<!-- A Review has many photo_reviews -->

<div class="row">
  <div class="col-md-12">
    <ul class="list-group">
      <li class="list-group-item list-group-item-info">
        Photo_reviews
      </li>

      <% @review.photo_reviews.each do |photo_review| %>
        <li class="list-group-item">
          <a href="/photo_reviews/<%= photo_review.id %>">
            <%= photo_review.review_id %>
          </a>
        </li>
      <% end %>
    </ul>
  </div>
</div>

<!-- A Review has many review_replies -->

<div class="row">
  <div class="col-md-12">
    <ul class="list-group">
      <li class="list-group-item list-group-item-info">
        Review_replies
      </li>

      <% @review.review_replies.each do |review_reply| %>
        <li class="list-group-item">
          <a href="/review_replies/<%= review_reply.id %>">
            <%= review_reply.reply_content %>
          </a>
        </li>
      <% end %>
    </ul>
  </div>
</div>
