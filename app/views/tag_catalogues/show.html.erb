<div class="page-header">
  <h3>Tag Catalogue #<%= @tag_catalogue.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <dl class="dl-horizontal">
      <dt>Tag content</dt>
      <dd><%= @tag_catalogue.tag_content %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/tag_catalogues" class="btn btn-primary">
        Back
      </a>
      <a href="/tag_catalogues/<%= @tag_catalogue.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_tag_catalogue/<%= @tag_catalogue.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>

<!-- A Tag catalogue has many restaurant_tags -->

<div class="row">
  <div class="col-md-12">
    <ul class="list-group">
      <li class="list-group-item list-group-item-info">
        Restaurant_tags
      </li>

      <% @tag_catalogue.restaurant_tags.each do |restaurant_tag| %>
        <li class="list-group-item">
          <a href="/restaurant_tags/<%= restaurant_tag.id %>">
            <%= restaurant_tag.restaurant_id %>
          </a>
        </li>
      <% end %>
    </ul>
  </div>
</div>
